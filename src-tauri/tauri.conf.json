{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "org.kreditpro.gmailtraynotifier",
  "productName": "Gmail Tray Notifier",
  "version": "0.1.0",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devUrl": "http://localhost:4200",
    "frontendDist": "../frontend/dist/mail-agent/browser"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Gmail Tray Notifier",
        "width": 900,
        "height": 620,
        "visible": true,
        "resizable": true
      },
      {
        "label": "alert",
        "title": "Gmail Tray Notifier",
        "width": 800,
        "min-height": 150,
        "height": "auto",
        "visible": false,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "url": "/?view=alert"
      }
    ]
  },
  "security": {
    "capabilities": ["app"],
    "dangerousRemoteDomainIpcAccess": []
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico"]
  }
}
